<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden = "true">

  <StackLayout cssClass="stackStyle" id="locationPage">
        
        

	<StackLayout orientation="horizontal"  marginTop="200" horizontalAlignment="center">
		<Label text="Enable location" fontSize="20"   color="white"/>
     	<Switch checked="false" id="switchForEnableLocation"  propertyChange="changeS"/>
    </StackLayout>

    <Button text="Take location" tap="takeLocation" id="takeLocationBtn"/>
    <Button text="Go next" tap="goToCameraPage" id="goToCameraBtn"/>
  </StackLayout>
</Page>
